{
  "name": "playwright-cucumber-bdd",
  "version": "1.0.0",
  "scripts": {
    "test": "cucumber-js --tags \"${TAGS:-$(node -p 'require(\"./config.json\").tags')}\" || true",
    "posttest": "npx node support/report_chart.js",
    "postinstall": "npx playwright install",
    "debug": "node --inspect-brk=5858 ./node_modules/.bin/cucumber-js ./src/test/features/login.feature --tags @debug"
  },
  "dependencies": {
    "@cucumber/cucumber": "^9.6.0",
    "@playwright/test": "^1.40.0",
    "multiple-cucumber-html-reporter": "^3.9.2",
    "playwright": "^1.40.0"
  },
  "devDependencies": {
    "cucumber-html-reporter": "^5.5.0",
    "cucumber-pretty": "^1.0.0"
  }
}
